<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Efrito Virtual Credit Cards | Login</title>

        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('plugins/font-awesome/css/font-awesome.css') }}" rel="stylesheet" />

        <link href="{{ asset('css/animate.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/efritodc.css') }}" rel="stylesheet" />
    </head>

    <body class="gray-bg">
        <div class="middle-box text-center loginscreen animated fadeInDown">
            <div>
                <div>
                    <h1 class="login-logo"><img src="{{ asset('img/logo.png') }}" /></h1>
                </div>
                <h3>Welcome to Efrito VCC</h3>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form method="post" action="{{ path('login') }}">
                    <div class="form-group">
                        <input type="text" class="form-control" name="username" placeholder="Username" required="">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required="">
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

                    <a href="#"><small>Forgot password?</small></a>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                </form>
                <p class="m-t"> <small>Efrito &copy; 2010 - {{ "now"|date('Y') }}</small> </p>
            </div>
        </div>

        <script src="{{ asset('js/jquery-2.1.1.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    </body>
</html>